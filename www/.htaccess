# disable directory listing
Options -Indexes
AddType text/cache-manifest .manifest

# Do not send referrer outside of app
Header always add Referrer-Policy "strict-origin"
# Enable browser XSS filter
Header always set X-Xss-Protection "1; mode=block"
# Use content-type passed by server
Header always set X-Content-Type-Options "nosniff"

<If "%{HTTP_HOST} == 'zmenastanov.skaut.cz'">
    # Use HSTS for ~3 months
    Header always set Strict-Transport-Security "max-age=7884000"
</If>

RewriteEngine On

# www.zmenastanov.skaut.cz -> https://zmenastanov.skaut.cz
RewriteCond %{HTTP_HOST} ^www\.(zmenastanov\.skaut\.cz)$ [NC]
RewriteRule ^(.*)$ https://zmenastanov.skaut.cz%{REQUEST_URI} [L,R=301]

## http -> https
#RewriteCond %{HTTP_HOST} ^zmenastanov\.skaut\.cz$ [NC]
#RewriteCond %{HTTPS} off
#RewriteRule ^(.*)$ https://zmenastanov.skaut.cz%{REQUEST_URI} [L,R=301]


# front controller
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule !\.(pdf|js|ico|gif|jpg|png|css|rar|zip|tar\.gz)$ index.php [L]
